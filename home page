        // Function to render property cards
        function renderProperties() {
            const homesGrid = document.getElementById('homes-grid');
            const landGrid = document.getElementById('land-grid');

            // Clear existing content
            homesGrid.innerHTML = '';
            landGrid.innerHTML = '';

            // Render homes
            properties.homes.forEach(home => {
                const card = document.createElement('div');
                card.className = 'property-card';
                card.innerHTML = `
                    <div class="property-image">
                        <img src="${home.image}" alt="${home.title}">
                        <span class="property-badge">${home.type}</span>
                    </div>
                    <div class="property-details">
                        <span class="property-type">Home</span>
                        <div class="property-price">${home.price}</div>
                        <div class="property-address">${home.address}</div>
                        <div class="property-features">
                            <div class="feature">
                                <i class="fas fa-bed"></i>
                                <span>${home.bedrooms}</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-bath"></i>
                                <span>${home.bathrooms}</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-ruler-combined"></i>
                                <span>${home.area}</span>
                            </div>
                        </div>
                    </div>
                `;
                card.addEventListener('click', () => openModal(home));
                homesGrid.appendChild(card);
            });

            // Render land
            properties.land.forEach(land => {
                const card = document.createElement('div');
                card.className = 'property-card';
                card.innerHTML = `
                    <div class="property-image">
                        <img src="${land.image}" alt="${land.title}">
                        <span class="property-badge">${land.type}</span>
                    </div>
                    <div class="property-details">
                        <span class="property-type">Land</span>
                        <div class="property-price">${land.price}</div>
                        <div class="property-address">${land.address}</div>
                        <div class="property-features">
                            <div class="feature">
                                <i class="fas fa-ruler-combined"></i>
                                <span>${land.area}</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-map-marked-alt"></i>
                                <span>${land.zoning}</span>
                            </div>
                        </div>
                    </div>
                `;
                card.addEventListener('click', () => openModal(land));
                landGrid.appendChild(card);
            });
        }

        // Modal functionality
        const modal = document.getElementById('propertyModal');
        const modalClose = document.getElementById('modalClose');

        function openModal(property) {
            document.getElementById('modalMainImage').src = property.image;
            document.getElementById('modalTitle').textContent = property.title;
            document.getElementById('modalPrice').textContent = property.price;
            document.getElementById('modalAddress').textContent = property.address;
            document.getElementById('modalPropertyType').textContent = property.type;
            document.getElementById('modalDescription').textContent = property.description;

            // Set home-specific details or hide if not applicable
            if (property.bedrooms) {
                document.getElementById('modalBedrooms').textContent = property.bedrooms;
                document.getElementById('modalBathrooms').textContent = property.bathrooms;
                document.getElementById('modalArea').textContent = property.area;
                document.getElementById('modalYearBuilt').textContent = property.yearBuilt;
                document.getElementById('modalGarage').textContent = property.garage;
                document.getElementById('modalStories').textContent = property.stories;
                document.getElementById('modalType').textContent = property.homeType;
                document.getElementById('modalLotSize').textContent = property.lotSize;
            } else {
                // For land properties
                document.getElementById('modalBedrooms').textContent = 'N/A';
                document.getElementById('modalBathrooms').textContent = 'N/A';
                document.getElementById('modalArea').textContent = property.area;
                document.getElementById('modalYearBuilt').textContent = 'N/A';
                document.getElementById('modalGarage').textContent = 'N/A';
                document.getElementById('modalStories').textContent = 'N/A';
                document.getElementById('modalType').textContent = property.zoning;
                document.getElementById('modalLotSize').textContent = property.area;
            }

            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        modalClose.addEventListener('click', () => {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });

        window.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });

        // Initialize the page
        document.addEventListener('DOMContentLoaded', renderProperties);
    </script>
</body>
</html>
